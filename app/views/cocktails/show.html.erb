<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= cl_image_path @cocktail.photo%>');">
  <div class="banner-content">
  <h1><%= @cocktail.name %></h1>
  <div class="recipe">
<% @cocktail.doses.each do |dose| %>
  <p>
    <%= dose.description %>
    <%= dose.ingredient.name %>
    <%= link_to "Delete an ingredient", dose_path(dose), method: :delete %>
  </p>
<% end %>
</div>

  <p><%= link_to "Edit", edit_cocktail_path(@cocktail), class: "btn-treehouse" %></p>
  <p><%= link_to "Delete", cocktail_path(@cocktail), method: :delete, data: { confirm: "No way! Delete? Really??" }, class: "btn-treehouse" %></p>
  <p><%= link_to "Add an ingredient", new_cocktail_dose_path(@cocktail), class: "btn-treehouse" %></p>
<%= link_to "Back", cocktails_path, class: "btn-medium btn-back" %>
  </div>
</div>

